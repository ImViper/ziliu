{
  "manifest_version": 3,
  "name": "字流助手",
  "version": "1.0.0",
  "description": "一键填充公众号内容，让文字如流水般顺畅发布",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://mp.weixin.qq.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://mp.weixin.qq.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "字流助手",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
