{
  "manifest_version": 3,
  "name": "字流助手",
  "version": "1.4.0",
  "description": "字流助手 - 智能检测剪贴板内容并填充到公众号编辑器",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "cookies",
    "scripting"
  ],
  "host_permissions": [
    "https://mp.weixin.qq.com/*",
    "http://mp.weixin.qq.com/*",
    "http://localhost:3000/*",
    "https://localhost:3000/*",
    "http://localhost:3001/*",
    "https://localhost:3001/*",
    "https://ziliu.app/*",
    "http://ziliu.app/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mp.weixin.qq.com/*",
        "http://mp.weixin.qq.com/*"
      ],
      "js": [
        "constants.js",
        "utils.js",
        "api.js",
        "editor.js",
        "ui.js",
        "main.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_title": "字流助手",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
